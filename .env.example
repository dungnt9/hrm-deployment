# HRM System Environment Variables
# Copy this file to .env and modify as needed

# GitHub username for cloning repos
GITHUB_USER=your-github-username

# Database passwords (change in production!)
POSTGRES_EMPLOYEE_PASSWORD=employee_pass
POSTGRES_TIME_PASSWORD=time_pass
POSTGRES_NOTIFICATION_PASSWORD=notification_pass
POSTGRES_KEYCLOAK_PASSWORD=keycloak_pass

# RabbitMQ
RABBITMQ_USER=hrm_user
RABBITMQ_PASSWORD=hrm_pass

# MinIO
MINIO_USER=minio_user
MINIO_PASSWORD=minio_pass

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
