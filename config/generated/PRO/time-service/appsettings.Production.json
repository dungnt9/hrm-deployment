{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-time;Port=5432;Database=time_db;Username=time_user;Password=time_pass",
    "Redis": "redis:6379"
  },
  "Keycloak": {
    "Realm": "hrm",
    "Authority": "http://keycloak:8080/realms/hrm",
    "Audience": "hrm-api",
    "ClientId": "hrm-api",
    "ClientSecret": "hrm-api-secret",
    "RequireHttps": false
  },
  "Authz": {
    "ClientId": "hrm-time-service",
    "ClientSecret": "hrm-authz-secret",
    "GrpcHost": "http://authz",
    "GrpcPort": 8081
  },
  "RabbitMQ": {
    "Host": "rabbitmq",
    "Port": 5672,
    "Username": "hrm_user",
    "Password": "hrm_pass",
    "VirtualHost": "/",
    "RetryCount": 5
  },
  "GrpcServices": {
    "EmployeeService": "http://employee-service:8081"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/time-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
